<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<% if @article.categories.any? %>
  <p>Categories: <%= render @article.categories %></p>
<% end %>

<strong>Created By:</strong>
<p><%= link_to gravatar_for(@article.user), user_path(@article.user) %></p>
<p><%= link_to @article.user.username, user_path(@article.user) %></p>
<p><%= link_to @article.user.email, user_path(@article.user) %></p>
<p><%= pluralize(@article.user.articles.count, "article") %></p>

<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
  <div><%= link_to 'Edit', edit_article_path(@article) %></div>
  <div><%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>
<%= link_to 'Back', articles_path %>

      