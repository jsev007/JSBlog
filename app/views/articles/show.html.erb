<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>
<strong>Created By:</strong>
<p><%= link_to gravatar_for(@article.user), user_path(@article.user) %></p>
<p><%= link_to @article.user.username, user_path(@article.user) %></p>
<p><%= link_to @article.user.email, user_path(@article.user) %></p>
<p><%= pluralize(@article.user.articles.count, "article") %></p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
