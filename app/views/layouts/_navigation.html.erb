<div>
  <%= link_to "Alpha blog", root_path, class: "navbar-brand", id: "logo" %>
  <% if logged_in? %>
    <br>Your Profile <%= "Admin" if current_user.admin? %><br>
    <div><%= link_to 'Log Out', logout_path, method: :delete %></div>
    <div><%= link_to "New Article", new_article_path %></div>
    <div><%= link_to "Edit your profile", edit_user_path(current_user) %></div>
    <div><%= link_to "View your profile", user_path(current_user) %></div>
    <div><%= link_to "Users", users_path %></div>
  <% else %>
    <div><%= link_to "Articles", articles_path %></div>
    <div><%= link_to 'Log In', login_path %></div>
    <div><%= link_to 'Sign Up', signup_path %></div>
  <% end %>
</div>
<br>
  <p><%= link_to 'Categories:', categories_path %></p>
  <% Category.all.each do |category| %>
    <div><%= link_to "#{category.name}", category_path(category) %></div>
  <% end %>
  
  <% if logged_in? and current_user.admin? %>
    <p><%= link_to "Create New Category", new_category_path %></p>
  <% end %>